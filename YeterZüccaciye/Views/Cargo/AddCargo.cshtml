@model YeterZüccaciye.Models.Sınıflar.CargoDetay
@{
    ViewBag.Title = "AddCargo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kargo Ekleme Sayfası</h2>
<br />
<form class="form-group" method="post">
    <label>Takip Kodu</label>
   <input type="text" value="@ViewBag.takipkod" class="form-control" readonly name="Takip Kodu" />
    <br />
    <label>Personel</label>
    @Html.TextBoxFor(x => x.Personel, new { @class = "form-control" })
    <br />
    <label>Alıcı</label>
    @Html.TextBoxFor(x => x.Alici, new { @class = "form-control" })
    <br />
    <label>Tarih</label>
    <input class="form-control" type="date" name="Date" />
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.CargoExplanation, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>
